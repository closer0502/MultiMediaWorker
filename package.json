{
  "name": "multimedia-worker",
  "version": "1.0.0",
  "description": "OpenAI APIを使用したマルチメディアコマンド生成ツール",
  "type": "module",
  "main": "backend/src/server.js",
  "scripts": {
    "dev": "npm run dev:client",
    "dev:server": "node backend/src/server.js",
    "dev:client": "vite --config frontend/vite.config.js",
    "build:client": "vite build --config frontend/vite.config.js",
    "preview:client": "vite preview --config frontend/vite.config.js",
    "test": "npm run test:backend",
    "test:backend": "node backend/tests/agent.test.js",
    "test:frontend": "vitest --run --config frontend/vite.config.js"
  },
  "keywords": [
    "openai",
    "ffmpeg",
    "imagemagick",
    "exiftool"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "multer": "^2.0.0",
    "openai": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.3.2",
    "jsdom": "^27.0.1",
    "vite": "^5.4.1",
    "vitest": "^4.0.2"
  }
}
